{
  "name": "smarttheme",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "style": "tailwindcss -i ./theme/assets/styles.css -o ./theme/assets/styles.out.css",
    "build": "esbuild src/index.tsx --tsconfig=tsconfig.preact.json --bundle --minify --sourcemap --outfile=theme/assets/index.js",
    "push": "npm run style && npm run build && shopify theme push --path=./theme",
    "pull": "shopify theme pull",
    "dev": "npm run style --watch & shopify theme dev --path=./theme --store=https://dev-challenge.myshopify.com"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/parser": "^5.59.9",
    "esbuild": "^0.18.0",
    "eslint": "^8.42.0",
    "preact": "^10.15.1",
    "prettier": "^2.8.8",
    "tailwindcss": "^3.3.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3"
  }
}
